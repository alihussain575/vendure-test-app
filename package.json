{
  "name": "admin-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "compile-admin-ui": "ts-node src/compile-admin-ui.ts",
    "copy": "npx copyfiles -u 1 'admin-ui/dist/**/*' dist/admin-ui",
    "dev:server": "ts-node ./src/index.ts",
    "dev:worker": "ts-node ./src/index-worker.ts",
    "dev": "concurrently yarn:dev:*",
    "build_bk": "tsc",
    "build": "rimraf dist && rimraf admin-ui && tsc && tsc -p tsconfig.migrations.json && yarn compile-admin-ui && yarn copy",
    "buildc": "rm -rf dist && rm -rf admin-ui && tsc && mkdir ./dist/static && cp -r ./static/email/ ./dist/static/email/",
    "bs": "yarn build && yarn start:server",
    "start:server": "node ./dist/src/index.js",
    "start:worker": "node ./dist/src/index-worker.js",
    "s": "APP_ENV=production &&  yarn build && yarn start:server",
    "start": "concurrently yarn:start:*",
    "migration:generate": "ts-node migration generate",
    "migration:run": "ts-node migration run",
    "migration:revert": "ts-node migration revert",
    "lint:fix": "eslint ./src/ --ext .ts --fix",
    "codegen": "graphql-codegen --config ./codegen.ts",
    "build:migration": "rimraf dist && tsc -p tsconfig.migrations.json"
  },
  "dependencies": {
    "@graphql-codegen/cli": "^4.0.1",
    "@sendgrid/mail": "^7.7.0",
    "@uiw/codemirror-extensions-langs": "^4.21.21",
    "@uiw/react-codemirror": "^4.21.21",
    "@vendure/admin-ui-plugin": "^2.1.4",
    "@vendure/asset-server-plugin": "^2.1.4",
    "@vendure/core": "^2.1.4",
    "@vendure/email-plugin": "2.1.4",
    "@vendure/job-queue-plugin": "^2.1.4",
    "@vendure/payments-plugin": "^2.1.4",
    "@vendure/ui-devkit": "^2.1.4",
    "bullmq": "^4.8.0",
    "copyfiles": "^2.4.1",
    "csv-writer": "^1.6.0",
    "dotenv": "16.3.1",
    "handlebars": "^4.7.8",
    "html-pdf": "^3.0.1",
    "jspdf": "^2.5.1",
    "liquidjs": "^10.9.4",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "node-xlsx": "^0.23.0",
    "pg": "8.11.1",
    "react-hook-form": "^7.48.2",
    "redis": "^4.6.8",
    "stripe": "^14.8.0",
    "typescript": "4.9.5",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^5.0.0",
    "@graphql-codegen/cli": "^4.0.1",
    "@graphql-codegen/typed-document-node": "^5.0.1",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-compatibility": "^2.1.5",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@types/dateformat": "^5.0.2",
    "@types/html-pdf": "^3.0.3",
    "@types/lodash": "^4.14.202",
    "@types/react": "^18.2.42",
    "concurrently": "8.2.0",
    "ts-node": "10.9.1"
  }
}
