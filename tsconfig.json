{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "target": "es2019",
    "strict": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "jsx": "react",
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules",
    "migration.ts",
    "populate.ts",
    "admin-ui",
    "src/migrations/*.ts",
    "**/*.spec.ts",
    "src/plugins/**/ui/*",
    "src/ui-extensions/*"
  ],
  "ts-node": {
    "files": true
  }
}